# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /tracks/       controllers.Tracks.index()

GET     /tracks/:id    controllers.Tracks.show(id: Long)
POST    /tracks/          controllers.Tracks.create
PUT     /tracks/:id      controllers.Tracks.update(id: Long)
DELETE  /tracks/:id      controllers.Tracks.delete(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
